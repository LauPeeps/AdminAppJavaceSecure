<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#492121"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"

        >
        <EditText
            android:id="@+id/addSubmoduleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Submodule Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/modern_pdf_input"
            android:textColorHint="@color/white"
            android:layout_marginBottom="12dp"
            />
        <EditText
            android:gravity="start"
            android:id="@+id/addSubmodulePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Submodule Preview"
            android:inputType="textMultiLine"
            android:height="150dp"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:background="@drawable/modern_pdf_input"
            android:textColorHint="@color/white"
            android:layout_marginBottom="12dp"
            />
        <Button
            android:id="@+id/addSubModuleBtnDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Submodule"
            android:backgroundTint="@color/purple_200"
            />

    </LinearLayout>



</RelativeLayout>