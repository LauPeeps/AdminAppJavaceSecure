<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/backgroundforall"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"

        >
        <EditText
            android:id="@+id/subModuleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Submodule Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/modern_pdf_input"
            android:textColorHint="@color/white"
            android:layout_marginBottom="12dp"
            />
        <EditText
            android:gravity="start"
            android:id="@+id/subModulePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Submodule Preview"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:height="100dp"
            android:padding="10dp"
            android:background="@drawable/modern_pdf_input"
            android:textColorHint="@color/white"
            android:layout_marginBottom="12dp"
            />
        <Button
            android:id="@+id/addSubmoduleDialogBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Submodule"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            />

    </LinearLayout>



</RelativeLayout>