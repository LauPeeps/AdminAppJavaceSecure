<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B9D5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="6dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:hint="Topic title"
            android:textCursorDrawable="@drawable/text_cursor"
            android:inputType="textPersonName"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <EditText

            android:id="@+id/titleContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:hint="Topic content"
            android:maxLines="15"
            android:gravity="start"
            android:height="400dp"
            android:padding="8dp"
            android:textCursorDrawable="@drawable/text_cursor"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/topic_background"
            />


            <Button
                android:layout_gravity="center"
                android:id="@+id/addTopicBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Add Topic"
                android:backgroundTint="#2B2525"

                />

    </LinearLayout>
</LinearLayout>